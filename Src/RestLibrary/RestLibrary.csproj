<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.3.0.0</AssemblyVersion>
    <FileVersion>1.3.0.0</FileVersion>
    <Version>1.3.0</Version>
    <Authors>Marco Minerva</Authors>
    <Company />
    <Description>A lightweight library to perform common REST API calls</Description>
    <Copyright>Copyright Â© Marco Minerva 2018</Copyright>
    <PackageIconUrl>https://raw.githubusercontent.com/marcominerva/RestLibrary/master/RestLibrary.png</PackageIconUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/marcominerva/RestLibrary</PackageProjectUrl>
    <RepositoryUrl>https://github.com/marcominerva/RestLibrary</RepositoryUrl>
    <PackageTags>rest web api webapi http httpclient</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

</Project>
